<html>
  <head>
    <title>Contact Me</title>

    <!-- linking boostrap css cdn  -->
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/public/style.css' />
    <link rel='icon' type='icon/x-icon' href='/public/assets/logo.png' />
    <script src='/public/contact.js' type='text/javascript'></script>
  </head>
  <body>
    <!-- NavBar -->
    <nav
      class='navbar navbar-expand-lg navbar-light bg-light shadow-sm p-3 mb-3 rounded'
    >
      <div class='container-lg'>
        <a class='navbar-brand me-5' href='/'>
          <img src='/public/assets/logo.png' alt='logo' />
        </a>
        <div class='collapse navbar-collapse' id='navbarNav'>
          <ul class='navbar-nav'>
            <li class='nav-item'>
              <a class='nav-link' href='/'>Home</a>
            </li>
            <li class='nav-item'>
              <a href='/blog' class='nav-link list-active'>Blog</a>
            </li>
          </ul>
        </div>
        <div class='d-flex contact-me'>
          <a href='/contact-me' class='btn btn-orange text-white px-4'>Contact
            Me</a>
        </div>
      </div>
    </nav>

    <!-- Form Contact -->
    <div
      class='container-form-blog d-flex align-items-center justify-content-center'
    >

      <div class='container-form'>

        <p class='h2 text-center mt-8 mb-4'>Contact Me</p>

        <form onsubmit='submitForm()'>
          <div class='mb-3'>
            <label for='input-name' class='form-label'>Name</label>
            <input
              name='contactName'
              type='text'
              class='form-control'
              id='input-name'
              aria-describedby='nameHelp'
            />
          </div>
          <div class='mb-3'>
            <label for='input-email' class='form-label'>Email</label>
            <input
              name='contactEmail'
              type='email'
              class='form-control'
              id='input-email'
              aria-describedby='emailHelp'
            />
          </div>

          <div class='mb-3'>
            <label for='input-phone' class='form-label'>No. HP</label>
            <input
              name='contactPhone'
              type='text'
              class='form-control'
              id='input-phone'
              aria-describedby='phoneHelp'
            />
          </div>

          <div class='mb-3'>
            <label for='input-subject' class='form-label'>Subject</label>
            <select id='input-subject' class='form-control'>
              <option value='Privacy Policy'>Privacy Policy</option>
              <option value='Problem With Our Site'>
                Problem With Our Site
              </option>
              <option value='Work'>Work</option>
              <option value='Other Questions'>Other Questions</option>
            </select>
          </div>

          <div class='mb-3'>
            <label for='input-message' class='form-label'>Messages</label>
            <textarea
              name='contactMessage'
              class='form-control'
              id='input-message'
              rows='3'
            ></textarea>
          </div>

          <div class='d-flex justify-content-end'>
            <button
              type='submit'
              class='btn btn-orange text-white mt-5 mb-5'
            >Submit</button>
          </div>
        </form>

      </div>

    </div>

  </body>
</html>